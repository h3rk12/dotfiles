[core]
  editor = nvim
  pager = delta
  fsmonitor = true
  untrackedCache = true

[column]
  ui = auto

[alias]
  co = !git branch -a | fzf | xargs git checkout
  push-f = push --force-with-lease
  tree = log --all --graph --pretty=format:'%x09%C(auto) %h %Cgreen %ar %Creset%x09by "%C(cyan ul)%an%Creset" %x09%C(auto)%s %d'

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = zdiff3

[diff]
  colorMoved = dimmed_zebra
  algorithm = histogram
  renames = true
  external = difft

[delta]
   navigate = true

[push]
	autoSetupRemote = true
  default = simple

[fetch]
  prune = true
  pruneTags = true

[rerere]
  enabled = true
  autoupdate = true

[include]
  path = ~/.gitconfig_user

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
